<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="search_hint" format="string">Enter Username</item>
    </style>

    <style name="HistoryButtonPrimary" parent="AppTheme">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/material_color_white</item>
    </style>

    <style name="HistoryButtonSecondary" parent="AppTheme">
        <item name="android:colorButtonNormal">@color/colorAccentAlt</item>
        <item name="android:textColor">@color/material_color_white</item>
    </style>

</resources>
