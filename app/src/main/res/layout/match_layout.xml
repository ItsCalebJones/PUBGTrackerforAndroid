<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/match_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/material_baseline_grid_1x"
        android:layout_marginStart="@dimen/material_baseline_grid_1x"
        android:orientation="vertical"
        android:paddingBottom="@dimen/material_baseline_grid_1x"
        android:paddingEnd="@dimen/material_card_title_block_padding_horizontal"
        android:paddingStart="@dimen/material_card_title_block_padding_horizontal"
        android:paddingTop="@dimen/material_baseline_grid_1x">

        <TextView
            android:id="@+id/match_overview_match_title"
            style="@style/MaterialTypography.Tall.Subheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unknown Match"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/match_overview_date"
            style="@style/MaterialTypography.Tall.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unknown Date"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/heading"
        android:layout_marginEnd="@dimen/material_baseline_grid_2x"
        android:layout_marginStart="@dimen/material_baseline_grid_2x"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/top_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:padding="@dimen/material_baseline_grid_1x">

        <LinearLayout
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/material_baseline_grid_2x"
            android:layout_marginStart="@dimen/material_baseline_grid_4x"
            android:layout_marginTop="@dimen/material_baseline_grid_2x"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/MaterialTypography.Dense.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/material_baseline_grid_1x"
                android:paddingStart="@dimen/material_baseline_grid_1x"
                android:text="RESULT"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/match_result"
                style="@style/MaterialTypography.Dense.Subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/material_baseline_grid_1x"
                android:paddingStart="@dimen/material_baseline_grid_1x"
                android:text="- -"
                android:textAlignment="center"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/material_baseline_grid_2x"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/MaterialTypography.Dense.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/material_baseline_grid_1x"
                android:paddingStart="@dimen/material_baseline_grid_1x"
                android:text="RATING"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/match_rating"
                style="@style/MaterialTypography.Dense.Subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/material_baseline_grid_1x"
                android:paddingStart="@dimen/material_baseline_grid_1x"
                android:text="- -"
                android:textAlignment="center"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/kills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/material_baseline_grid_2x"
            android:layout_marginEnd="@dimen/material_baseline_grid_4x"
            android:layout_marginTop="@dimen/material_baseline_grid_2x"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/MaterialTypography.Dense.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/material_baseline_grid_1x"
                android:paddingStart="@dimen/material_baseline_grid_1x"
                android:text="KILLS"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/match_kills"
                style="@style/MaterialTypography.Dense.Subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/material_baseline_grid_1x"
                android:paddingStart="@dimen/material_baseline_grid_1x"
                android:text="- -"
                android:textAlignment="center"
                android:textStyle="bold" />


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_data"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/material_baseline_grid_1x">

        <LinearLayout
            android:id="@+id/damage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/material_baseline_grid_2x"
            android:layout_marginStart="@dimen/material_baseline_grid_4x"
            android:layout_marginTop="@dimen/material_baseline_grid_2x"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/MaterialTypography.Dense.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/material_baseline_grid_1x"
                android:paddingStart="@dimen/material_baseline_grid_1x"
                android:text="DAMAGE"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/match_damage"
                style="@style/MaterialTypography.Dense.Subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/material_baseline_grid_1x"
                android:paddingStart="@dimen/material_baseline_grid_1x"
                android:text="- -"
                android:textAlignment="center"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/material_baseline_grid_2x"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                style="@style/MaterialTypography.Dense.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/material_baseline_grid_1x"
                android:paddingStart="@dimen/material_baseline_grid_1x"
                android:text="DISTANCE"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/match_distance"
                style="@style/MaterialTypography.Dense.Subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/material_baseline_grid_1x"
                android:paddingStart="@dimen/material_baseline_grid_1x"
                android:text="- -"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/material_baseline_grid_2x"
            android:layout_marginEnd="@dimen/material_baseline_grid_4x"
            android:layout_marginTop="@dimen/material_baseline_grid_2x"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                style="@style/MaterialTypography.Dense.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/material_baseline_grid_1x"
                android:paddingStart="@dimen/material_baseline_grid_1x"
                android:text="SURVIVED"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/match_survived"
                style="@style/MaterialTypography.Dense.Subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/material_baseline_grid_1x"
                android:paddingStart="@dimen/material_baseline_grid_1x"
                android:text="- -"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>