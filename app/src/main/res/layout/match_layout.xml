<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playlist_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/material_baseline_grid_2x"
        android:layout_marginStart="@dimen/material_baseline_grid_2x"
        android:background="@color/divider" />

    <LinearLayout
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/material_baseline_grid_1x"
        android:layout_marginStart="@dimen/material_baseline_grid_1x"
        android:orientation="vertical"
        android:paddingBottom="@dimen/material_baseline_grid_1x"
        android:paddingEnd="@dimen/material_card_title_block_padding_horizontal"
        android:paddingStart="@dimen/material_card_title_block_padding_horizontal"
        android:paddingTop="@dimen/material_baseline_grid_0.5x">

        <TextView
            android:id="@+id/match_overview_match"
            style="@style/MaterialTypography.Tall.Subheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unknown Match"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/match_overview_season"
            style="@style/MaterialTypography.Tall.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unknown Date"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/material_baseline_grid_2x"
        android:layout_marginStart="@dimen/material_baseline_grid_2x"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/material_baseline_grid_1x">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/MaterialTypography.Dense.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/material_baseline_grid_1x"
                android:paddingStart="@dimen/material_baseline_grid_1x"
                android:text="RATING"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/match_rating"
                style="@style/MaterialTypography.Dense.Subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/material_baseline_grid_1x"
                android:paddingStart="@dimen/material_baseline_grid_1x"
                android:text="- -"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/match_rating_rank"
                style="@style/MaterialTypography.Regular.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/material_baseline_grid_1x"
                android:paddingStart="@dimen/material_baseline_grid_1x" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/MaterialTypography.Dense.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/material_baseline_grid_1x"
                    android:paddingStart="@dimen/material_baseline_grid_1x"
                    android:text="WIN %"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/match_win_rate"
                    style="@style/MaterialTypography.Dense.Subheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/material_baseline_grid_1x"
                    android:paddingStart="@dimen/material_baseline_grid_1x"
                    android:text="- -"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/match_win_rate_ranking"
                    style="@style/MaterialTypography.Regular.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/material_baseline_grid_1x"
                    android:paddingStart="@dimen/material_baseline_grid_1x" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/material_baseline_grid_1x">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/MaterialTypography.Dense.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/material_baseline_grid_1x"
                    android:paddingStart="@dimen/material_baseline_grid_1x"
                    android:text="TOP 10 RATE"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/match_top_ten_rate"
                    style="@style/MaterialTypography.Dense.Subheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/material_baseline_grid_1x"
                    android:paddingStart="@dimen/material_baseline_grid_1x"
                    android:text="- -"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/match_top_ten_ranking"
                    style="@style/MaterialTypography.Regular.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/material_baseline_grid_1x"
                    android:paddingStart="@dimen/material_baseline_grid_1x" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/MaterialTypography.Dense.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/material_baseline_grid_1x"
                    android:paddingStart="@dimen/material_baseline_grid_1x"
                    android:text="K/D RATIO"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/match_KD_rate"
                    style="@style/MaterialTypography.Dense.Subheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/material_baseline_grid_1x"
                    android:paddingStart="@dimen/material_baseline_grid_1x"
                    android:text="- -"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/match_KD_ranking"
                    style="@style/MaterialTypography.Regular.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/material_baseline_grid_1x"
                    android:paddingStart="@dimen/material_baseline_grid_1x" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>