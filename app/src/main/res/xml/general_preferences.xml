        <SwitchPreference
            android:key="ads_allowed"
            android:enabled="false"
            android:summary="Help keep the lights on."
            android:title="Allow Ads" />
    </PreferenceCategory>
    <PreferenceCategory android:title="About">
        <Preference
            android:key="pubg_tracker"
            android:icon="@drawable/logo"
            android:summary="All statistics are powered by the PUBG Tracker Network."
            android:title="PUBG Tracker"/>
